# Analytics Configuration
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_VERIFICATION=your-google-verification-code

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_SITE_NAME=Brutalist Portfolio

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_BUDGET_LCP=2500
NEXT_PUBLIC_PERFORMANCE_BUDGET_FID=100
NEXT_PUBLIC_PERFORMANCE_BUDGET_CLS=0.1

# Error Tracking
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
SENTRY_DSN=your-sentry-dsn-here

# Development Settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_SHOW_PERFORMANCE_DASHBOARD=false

# API Keys (if needed)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Email Configuration (for contact forms)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Database (if needed for analytics storage)
DATABASE_URL=postgresql://user:password@localhost:5432/portfolio

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Content Security Policy
NEXT_PUBLIC_CSP_NONCE=your-csp-nonce